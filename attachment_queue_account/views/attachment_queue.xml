<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="account_move_statement_attachment_view_form" model="ir.ui.view">
            <field name="name">account.move.statement.ir.attachment.form.view</field>
            <field name="model">attachment.queue</field>
            <field name="inherit_id" ref="attachment_queue.view_attachment_queue_form"/>
            <field name="arch" type="xml">
                <data>
                    <field name="file_type" position="after">
                        <field name="journal_id"
                               attrs="{'invisible':[('file_type', 'not in', ('account_move_import', 'account_statement_import'))],
                                       'required':[('file_type', 'in', ('account_move_import', 'account_statement_import'))]}"/>
                    </field>
                </data>
            </field>
        </record>

</odoo>
